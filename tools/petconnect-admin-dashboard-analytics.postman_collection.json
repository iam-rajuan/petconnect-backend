  "item": [
    {
      "name": "Admin Auth",
      "item": [
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let res = pm.response.json();",
                  "",
                  "if (res?.data?.tokens?.accessToken) {",
                  "    pm.environment.set(\"access_token\", res.data.tokens.accessToken);",
                  "    console.log(\"Admin access token saved!\");",
                  "}",
                  "",
                  "if (res?.data?.tokens?.refreshToken) {",
                  "    pm.environment.set(\"refresh_token\", res.data.tokens.refreshToken);",
                  "    console.log(\"Admin refresh token saved!\");",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\r\n  \\\"email\\\": \\\"admin@carelypet.com\\\",\r\n  \\\"password\\\": \\\"admin@123\\\"\r\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}admin/auth/login",
              "host": [
                "{{base_url}}admin"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
    },
