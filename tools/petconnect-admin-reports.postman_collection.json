{
  "info": {
    "name": "PetConnect Admin Reports APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Reports",
      "item": [
        {
          "name": "List Reports",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/reports",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "reports"
              ]
            },
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Get Report",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/reports/{{report_id}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "reports",
                "{{report_id}}"
              ]
            },
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Remove Content",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/admin/reports/{{report_id}}/remove-content",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "reports",
                "{{report_id}}",
                "remove-content"
              ]
            },
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Warn User",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/admin/reports/{{report_id}}/warn",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "reports",
                "{{report_id}}",
                "warn"
              ]
            },
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Dismiss Report",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/admin/reports/{{report_id}}/dismiss",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "reports",
                "{{report_id}}",
                "dismiss"
              ]
            },
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Report",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/admin/reports/{{report_id}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "reports",
                "{{report_id}}"
              ]
            },
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "report_id",
      "value": ""
    }
  ]
}