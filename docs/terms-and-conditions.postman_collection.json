{
  "info": {
    "name": "Terms & Privacy (Admin + App)",
    "_postman_id": "3f8b3f5c-0f5d-4a4b-9f7d-3c6a2d9a6c7b",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "const token = json?.data?.tokens?.accessToken;",
              "if (token) {",
              "  pm.collectionVariables.set('adminToken', token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Terms (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/settings/terms",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "settings", "terms"]
        }
      }
    },
    {
      "name": "Get Privacy (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/settings/privacy",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "settings", "privacy"]
        }
      }
    },
    {
      "name": "Update Terms (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/settings/terms",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "settings", "terms"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"<h1>Terms & Conditions</h1><p>Replace with your content.</p>\"\n}"
        }
      }
    },
    {
      "name": "Update Privacy (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/settings/privacy",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "settings", "privacy"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"<h1>Privacy Policy</h1><p>Replace with your content.</p>\"\n}"
        }
      }
    },
    {
      "name": "Get Terms (App/Public)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/legal/terms",
          "host": ["{{baseUrl}}"],
          "path": ["legal", "terms"]
        }
      }
    },
    {
      "name": "Get Privacy (App/Public)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/legal/privacy",
          "host": ["{{baseUrl}}"],
          "path": ["legal", "privacy"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "adminEmail",
      "value": "admin@example.com"
    },
    {
      "key": "adminPassword",
      "value": "change-me"
    },
    {
      "key": "adminToken",
      "value": ""
    }
  ]
}
